<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forum</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Forum</h1>
    <form action="/add-post" method="POST">
      <input type="text" name="title" placeholder="Post Title" required>
      <textarea name="content" placeholder="Your post content..." required></textarea>
      <button type="submit">Submit Post</button>
    </form>
  </header>

  <main>
    <h2>All Posts</h2>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h3><%= post.title %></h3>
          <p><%= post.content %></p>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
